#include "tm4c123gh6pm.h"
void SysTick_Init(void){
	NVIC_ST_CTRL_R =0;
	NVIC_ST_RELOAD_R =0x00FFFFFF;
	NVIC_ST_CURRENT_R= 0 ;
	NVIC_ST_CTRL_R = 0x05;	

}
void Systick_wait100ms(){
NVIC_ST_RELOAD_R =8000000 -1;
	NVIC_ST_CURRENT_R =0;
	while((	NVIC_ST_CTRL_R    & 0x00010000)==0){
		if(NVIC_ST_RELOAD_R !=0){
			sprintf("%d",NVIC_ST_RELOAD_R );
		}
	}
    }
